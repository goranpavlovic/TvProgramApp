{% extends '::base.html.twig' %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('bundles/tvdatabasehome/css/stations.css') }}" />
{% endblock %}

{% block script %}

{% endblock %}

{% block mainmany %}
	<li><a href="/{{ _locale }}">{% trans %}Home{% endtrans %}</a></li>
	<li><a href="/{{ _locale }}/tvstations">{% trans %}Tv Stations{% endtrans %}</a></li>
	<li><a href="/{{ _locale }}/advancedsearch">{% trans %}Detailed View{% endtrans %}</a></li>
	<li><a href="/{{ _locale }}/search">{% trans %}Search{% endtrans %}</a></li>
{% endblock %}

{% block content %} 
	<div id="show">

		{% for attribute in attributes %}
			<div id="{{ attribute.attributeMeta.AttributeName }}">
			{% if attribute.attributeMeta.AttributeName == "Link" %}
				<a href={{ attribute.Value }}> link </a>
			{% elseif attribute.attributeMeta.AttributeName == "Picture" %}
				<img src={{ attribute.Value }}>
			{% else %}
				{{ attribute.AttributeMeta.AttributeName }}: {{ attribute.Value }} 
				<a href="/{{ _locale }}/edit/{{ attribute.ValueId }}">edit</a>
			{% endif %}
			</div>
		{% endfor %}

	</div>
	<div><a href="/{{ _locale }}/add/{{ entity.EntityId }}">{% trans %} add new {% endtrans %}</a></div>
{% endblock %}

  
