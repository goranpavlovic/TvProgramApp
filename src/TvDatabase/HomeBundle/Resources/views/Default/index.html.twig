{% extends '::base.html.twig' %}

{% block stylesheet %}

{% endblock %}

{% block script %}

{% endblock %}

{% block mainmany %}
	<li class="current_page_item" >
	<a href="{{ path('tv_database_home_homepage')}}">{% trans %}Home{% endtrans %}</a></li>
	<li>
	<a href="{{ path('tv_database_stations_page')}}">{% trans %}Tv Stations{% endtrans %}</a></li>
	<li>
	<a href="{{ path('tv_database_program_page') }}">{% trans %}Detailed View{% endtrans %}</a></li>
	<li>
	<a href="{{ path('tv_database_search') }}">{% trans %}Search{% endtrans %}</a></li>
{% endblock %}

{% block content %}
<h2>{% trans %}Showing now{% endtrans %}</h2> 
	{% for result in results %}
	<div id="TV">
	<a href="{{ path('tv_database_show_tv', {'id' : result.tv.tvid}) }}">{{ result.tv.tvname }}</a>
	<div id="broadcast table">
		<table>
			<tr>
				<td>{{ result.shows }}</td>
				<td><a href="{{ path('tv_database_show_broadcast', {'id' : result.nameId}) }}">
				{{ result.name }}
				</a></td>
			</tr>
			<tr>
				<td>{{ result.showsNext }}</td>
				<td><a href="{{ path('tv_database_show_broadcast', {'id' : result.nameNextId}) }}">
				{{ result.nameNext }}
				</a></td>
			</tr>
		</table>
	</div>
	</div>
	{% endfor %}
{% endblock %}


