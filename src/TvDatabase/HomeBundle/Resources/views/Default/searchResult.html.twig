{% extends '::base.html.twig' %}


{% block script %}

{% endblock %}

{% block mainmany %}
	<li><a href="/{{ _locale }}">{% trans %}Home{% endtrans %}</a></li>
	<li><a href="/{{ _locale }}/tvstations">{% trans %}Tv Stations{% endtrans %}</a></li>
	<li><a href="/{{ _locale }}/advancedsearch">{% trans %}Detailed View{% endtrans %}</a></li>
	<li class="current_page_item"><a href="/{{ _locale }}/search">{% trans %}Search{% endtrans %}</a></li>
{% endblock %}

{% block content %} 
		<form action="/{{ _locale }}/searchResult" method="get">
	    <label>{% trans %}Search{% endtrans %}:</label>
	    <input type="text" name="searchText" value="{{ search }}">
	    <input type="submit" Value="{% trans %} Search {% endtrans %}">
	    </form>
	    <a href="/{{ _locale }}/searchResult/filter/{{ search }}">filter results</a>
	<table>
		<tr>
			<th>{% trans %}Televison{% endtrans %}</th>
			<th>{% trans %}Time{% endtrans %}</th>
			<th>{% trans %}Description{% endtrans %}</th>
		</tr>
	{% for result in results %}
	        <tr>
	            <td><a href="/{{ _locale }}/tv/{{ result.TvStation }}/{{ result.DateTime }}">{{ result.TvName }}</a></td>
	            <td><a href="/{{ _locale }}/show/{{ result.EntityId }}">{{ result.DateTime }}</a></td>
	            <td>{{ result.Value }}</td>
	        </tr>
	{% endfor %}
	</table>
{% endblock %}

  
